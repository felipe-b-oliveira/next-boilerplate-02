import { render, screen } from '@testing-library/react'

import {{pascalCase name}} from './{{lowerCase name}}'

/**
 * Error on 'toHaveStyle', the test seems to check for rgb colors istead of HEX '#COLOR_CODE'
 */
export const convertHexToRGBA = (hexCode: string) => {
  let hex = hexCode.replace('#', '')

  if (hex.length === 3) {
    hex = `${hex[0]}${hex[0]}${hex[1]}${hex[1]}${hex[2]}${hex[2]}`
  }

  const r = parseInt(hex.substring(0, 2), 16)
  const g = parseInt(hex.substring(2, 4), 16)
  const b = parseInt(hex.substring(4, 6), 16)

  return { r, g, b }
}

describe('<{{pascalCase name}} />', () => {
  it('should render the heading', () => {
    const { container } = render(<{{pascalCase name}} />)

    expect(screen.getByRole('heading', { name: /{{pascalCase name}}/i })).toBeInTheDocument()

    expect(container.firstChild).toMatchSnapshot()
  })
})
